{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/(diwali|christmas|new-year|gandhi-jayanti|eid|onam|ramzan|apj-birthday|apj-death-day|salah-new-birthday)",
      "destination": "/$1.html"
    },
    {
      "source": "/([a-zA-Z0-9-]+)",
      "destination": "/event.html?festival=$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ]
}